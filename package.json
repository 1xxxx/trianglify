{
  "name": "trianglify",
  "version": "0.3.1",
  "description": "Trianglify is a javascript library for generating colorful triangle meshes that can be used as SVG images and CSS backgrounds.",
  "author": "Quinn Rohlf <qr@qrohlf.com>",
  "license": "GPL-3.0",
  "main": "lib/trianglify.js",
  "homepage": "https://github.com/qrohlf/trianglify",
  "repository": {
    "type": "git",
    "url": "git://github.com/qrohlf/trianglify.git"
  },
  "scripts": {
    "test": "mocha test/test.js",
    "lint": "node node_modules/standard/bin/cmd.js",
    "start": "node gulpfile.js",
    "postinstall": "node scripts/postinstall.js",
    "precommit": "npm run lint && npm run test"
  },
  "dependencies": {
    "chroma-js": "^0.6.3",
    "colors": "^1.1.2",
    "delaunay-fast": "^1.0.1",
    "jsdom": "^3.1.2",
    "seedrandom": "^2.3.11"
  },
  "optionalDependencies": {
    "canvas": "1.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.0",
    "browserify": "^9.0.3",
    "chai": "^2.1.0",
    "del": "^0.1.1",
    "gulp": "^3.8.6",
    "gulp-bump": "^0.1.11",
    "gulp-filter": "^1.0.2",
    "gulp-git": "^0.5.2",
    "gulp-jshint": "^1.7.1",
    "gulp-mocha": "^1.1.1",
    "gulp-rename": "^1.2.0",
    "gulp-sourcemaps": "^1.5.0",
    "gulp-tag-version": "^1.1.0",
    "gulp-uglify": "^0.3.1",
    "husky": "^0.9.1",
    "jshint-stylish": "^0.4.0",
    "mocha": "^2.1.0",
    "node-notifier": "^4.1.2",
    "standard": "^4.5.4",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "dist"
    ]
  },
  "directories": {
    "example": "examples"
  },
  "keywords": [
    "svg",
    "d3.js",
    "visualization"
  ],
  "bugs": {
    "url": "https://github.com/qrohlf/trianglify/issues"
  },
  "browser": {
    "jsdom": false,
    "canvas": false
  },
  "npmName": "trianglify",
  "npmFileMap": [
    {
      "basePath": "dist",
      "files": [
        "trianglify.min.js"
      ]
    }
  ]
}
